
<% fighters = Fighter.where(:fight => [2]) %>
<div class="new_fight">

<div class="controls form-inline">
  <h3>Who will win the fight?</h3>
  

  <% fighters.each do |fighter| %>
    <%=  image_tag(fighter.picture.url, alt: fighter.name, width: "150px") %>
    <%= f.radio_button(:fighter_id2, fighter.id) %>
    <%= f.label(:fighter_id1, "To win") %>
	
  <% end %>
</div>	  


<div class="controls form-inline">
<h4>What round will the fight end?</h4>

	 <%= f.radio_button(:round_id2, "1") %>
      <%= f.label(:round_id2, "Round 1") %>
	  <%= f.radio_button(:round_id2, "2") %>
      <%= f.label(:round_id2, "Round 2") %>
	  <%= f.radio_button(:round_id2, "3") %>
      <%= f.label(:round_id2, "Round 3") %>
</div>


<div class="controls form-inline">
<h4>How will the fight end?</h4>
	 <%= f.radio_button(:how_id2, "1") %>
      <%= f.label(:how_id2, "TKO ") %>
	  <%= f.radio_button(:how_id2, "2") %>
      <%= f.label(:how_id2, "Submission") %>
	  <%= f.radio_button(:how_id2, "3") %>
      <%= f.label(:how_id2, "Decision") %>
</div>


